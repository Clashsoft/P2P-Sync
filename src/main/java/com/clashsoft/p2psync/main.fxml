<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.clashsoft.p2psync.Controller">
	<columnConstraints>
		<ColumnConstraints />
		<ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="10.0" prefWidth="600.0" />
		<ColumnConstraints hgrow="SOMETIMES" maxWidth="82.0" minWidth="10.0" />
	</columnConstraints>
	<rowConstraints>
		<RowConstraints />
		<RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
		<RowConstraints minHeight="-Infinity" prefHeight="10.0" vgrow="SOMETIMES" />
		<RowConstraints vgrow="SOMETIMES" />
		<RowConstraints vgrow="SOMETIMES" />
		<RowConstraints vgrow="SOMETIMES" />
		<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
	</rowConstraints>
	<children>
		<TableView fx:id="syncTable" editable="true" minHeight="-Infinity" minWidth="-Infinity" onKeyReleased="#handleTableKeyTyped" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1">
			<columns>
				<TableColumn prefWidth="140.0" text="Remote Address" />
				<TableColumn prefWidth="200.0" text="Local File" />
				<TableColumn prefWidth="200.0" text="Remote File" />
				<TableColumn editable="false" prefWidth="50.0" text="Status" />
			</columns>
		</TableView>
		<Button fx:id="newEntryButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleNewEntry" text="New Entry" GridPane.columnIndex="2" GridPane.rowIndex="5" />
		<TextField fx:id="remoteHostname" prefHeight="27.0" prefWidth="198.0" promptText="Remote IP / Hostname" GridPane.columnIndex="1" GridPane.rowIndex="3" />
		<TextField fx:id="localFile" promptText="Local File" GridPane.columnIndex="1" GridPane.rowIndex="4" />
		<TextField fx:id="remoteFile" promptText="Remote File" GridPane.columnIndex="1" GridPane.rowIndex="5" />
		<Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleOpenLocalFile" text="..." GridPane.columnIndex="2" GridPane.rowIndex="4" />
		<TextField fx:id="remotePort" promptText="Port" GridPane.columnIndex="2" GridPane.rowIndex="3" />
		<Label fx:id="errorLabel" GridPane.columnIndex="1" GridPane.rowIndex="6" />
	</children>
	<padding>
		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
	</padding>
</GridPane>
